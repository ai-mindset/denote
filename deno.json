{
    "version": "0.1.0",
    "description": "A lightweight, self-hosted weekly TL;DR summariser built with Deno",
    "tasks": {
        "install": "deno cache --reload main.ts",
        "test": "deno test --allow-net --allow-read --allow-write --allow-env",
        "test:unit": "deno test --allow-read tests/unit/",
        "test:integration": "deno test --allow-net --allow-read --allow-write tests/integration/",
        "test:e2e": "deno test --allow-net --allow-read --allow-write --allow-run --allow-env tests/e2e/",
        "test:coverage": "deno test --coverage=cov && deno coverage cov",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "fetch": "deno run --allow-net --allow-read --allow-write src/fetcher.ts",
        "generate": "deno run --allow-read --allow-write src/generate.ts",
        "schedule": "deno run --allow-net --allow-read --allow-write src/scheduler.ts",
        "run": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi main.ts",
        "run_large": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi main.ts -c ai_drug_discovery_config.json -d 7"
    },
    "lint": {
        "include": ["src/", "tests/"]
    },
    "fmt": {
        "include": ["src/", "tests/"],
        "lineWidth": 100,
        "singleQuote": false,
        "proseWrap": "always"
    },
    "compilerOptions": {
        "strict": true
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@^0.218.2",
        "@std/testing/bdd": "jsr:@std/testing/bdd@^0.218.2",
        "@std/testing/mock": "jsr:@std/testing/mock@^0.218.2",
        "@std/expect": "jsr:@std/expect@^0.218.2",
        "@db/sqlite": "jsr:@db/sqlite@0.11",
        "@mikaelporttila/rss": "jsr:@mikaelporttila/rss@^1.1.3"
    }
}
